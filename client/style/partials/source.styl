.source
  max-width 960px
  clearfix()
  .code
    display block
    width 97%
    height 300px
    margin 6px 0 30px 0
    padding 1.5%
    border 1px solid #999
    monofont()
    line-height 1.5
    font-size 1.2em
    color #666
    &:focus
      outline none
  legend
    font-size 1.5em
    margin-bottom 10px
    font-weight bold
    text-transform uppercase
  .option
    vertical-align center
  .label
    font-size 1.3em
    line-height 1.3
    padding 1%
    background-color blue-highlight
    display block
    float left
    margin-right 2%
    cursor pointer
    width:21.5%
    &:last-child
      margin-right:0
    &:hover
      background-color blue-bright
  .button
    margin 20px 0
    padding 10px 20px
    border none
    background-color pink-bright
    font-size 1.4em
    color context-light
    cursor pointer
    text-transform uppercase
    &:hover
      background-color pink-highlight

.ie7, .ie8
  .label
    width:21%