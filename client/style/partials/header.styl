.header
  padding 30px 0 40px 0
  border-bottom 6px solid blue-bright
  background-color darkest-bg
  margin-bottom 20px
  .title
    font-family 'Ostrich Sans'
    font-size 6em
    letter-spacing 0.1em
    color green-bright
    .emphasis
      font-family 'Ostrich Sans Bold'
      font-size 0.9em
      color pink-bright
  .subtitle
    font-size 1.4em
    font-weight 200
    letter-spacing 0.1em
    color blue-highlight
    text-transform uppercase
